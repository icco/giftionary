<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Giftionary <%= "\"Search #{@query}\"" if @query %></title>

    <!-- Mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="/css/tachyons.2.1.0.min.css">
    <style>
      img { display: block; }
    </style>
  </head>
  <body class="">
    <div class="mvm pam mbs dt mw8 center">
      <form class="" action="/" enctype="multipart/form-data" method="post" novalidate="">
        <div class="dtc w-100">
          <input class="pas h3 f3 di w-100" type="search" name="q" value="<%= @query %>" placeholder="Words" autofocus="">
        </div>
        <div class="dtc">
          <button class="h3 mhs f3 btn btn--blue" type="submit">Gifs</button>
        </div>
      </form>

      <div id="found" class="tc lh-body mw-100 ptm"></div>
    </div>

    <div id="container" class="w-100"></div>

    <script src="/js/jquery.js?1422488917" type="text/javascript"></script>
    <script src="/js/packery.pkgd.min.js?1422488917" type="text/javascript"></script>
    <script src="/js/imagesloaded.pkgd-f8f1a4ae.js" type="text/javascript"></script>
    <% if @query %>
      <script>
        document.addEventListener("DOMContentLoaded", function() {
          var c = document.querySelector("#container");
          p = new Packery(c, {
            gutter: 10,
            transitionDuration: 0,
          });
          $.get('/s/<%= @query %>.json', function(data) {
            $("#found").text("Found " + data.length + " gifs.");

            for (i in data) {
              var image = new Image();
              image.src = data[i];
              var a = $("<a />");
              a.attr("href", "https://www.google.com/searchbyimage?image_url=" + data[i]);
              a.attr("target", "_blank");
              a.append(image);
              imagesLoaded(a, function(e) {
                $(c).append(e.elements);
                p.addItems(e.elements);
                p.layout();
              });
            }
          });
        });
      </script>
    <% end %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-333449-19', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
