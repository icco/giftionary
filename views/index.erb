<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Giftionary <%= "\"Search #{@query}\"" if @query %></title>

    <!-- Mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="/css/tachyons.min.css">
    <style>
      img {
        display: block;
      }
    </style>
  </head>
  <body class="mw8 center">
    <div class="mvm">
      <form class="pam mbs" action="/" enctype="multipart/form-data" method="post" novalidate="">
        <input class="w-80 pas h3 di" type="search" name="q" value="<%= @query %>" placeholder="Words" autofocus="">
        <button class="w-10 di h3 btn btn--blue" type="submit">Go</button>
      </form>
    </div>

    <div id="container">
      <% @urls.each do |url| %>
        <div class="item">
          <img src="<%= url %>" />
        </div>
      <% end %>
    </div>

    <script src="/js/packery.pkgd.min.js?1422488917" type="text/javascript"></script>
    <script src="/js/imagesloaded.pkgd-f8f1a4ae.js" type="text/javascript"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function() {
        var e, n = document.querySelector("#container");
        imagesLoaded(n, function() {
          e = new Packery(n, {
            itemSelector: ".item",
            gutter: 10
          })
        })
      });
    </script>
  </body>
</html>
